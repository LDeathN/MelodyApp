@model IEnumerable<MelodyApp.Models.Song>

<h2>Songs</h2>

<a asp-action="Add" class="btn btn-primary mb-3">Add New Song</a>

<form asp-action="Index" method="get" class="mb-3 d-flex">
    <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" class="form-control me-2" placeholder="Search songs..." />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th style="width: 40%;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model)
        {
            <tr>
                <td>@song.Title</td>
                <td>
                    <div class="d-flex flex-wrap gap-1">
                        <a asp-action="Details" asp-route-id="@song.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@song.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="AddToAlbum" asp-route-songId="@song.Id" class="btn btn-success btn-sm">Add to Album</a>

                        <form asp-action="Delete" asp-route-id="@song.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this song?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>

                        <form asp-action="AddToFavorites" method="post" class="d-inline">
                            <input type="hidden" name="songId" value="@song.Id" />
                            <button type="submit" class="btn btn-warning btn-sm">Favorite</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</table>

@{
    int currentPage = (int)ViewData["CurrentPage"];
    int totalPages = (int)ViewData["TotalPages"];
    string currentFilter = ViewData["CurrentFilter"]?.ToString() ?? "";
}

<nav aria-label="Song pagination">
    <ul class="pagination">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-searchTerm="@currentFilter">Previous</a>
            </li>
        }

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchTerm="@currentFilter">@i</a>
            </li>
        }

        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-searchTerm="@currentFilter">Next</a>
            </li>
        }
    </ul>
</nav>
