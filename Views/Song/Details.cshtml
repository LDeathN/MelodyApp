@model MelodyApp.Models.Song

@{
    ViewData["Title"] = "Song Details";
}

<div class="text-center mt-4">
    <h2>@Model.Title</h2>
    <p><strong>Genre:</strong> @Model.Genre?.Name</p>
    <p><strong>Artist:</strong> @Model.Artist?.Name</p>
    <div>
        <img src="https://cdn-icons-png.flaticon.com/512/5338/5338726.png" alt="Song cover" class="img-fluid my-3" style="max-height: 300px;" />
    </div>
    
    <audio controls class="my-3" style="width: 100%; max-width: 600px;">
        <source src="@Model.Url" type="audio/mpeg" />
        Your browser does not support the audio element.
    </audio>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>
