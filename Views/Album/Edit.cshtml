@model MelodyApp.Models.ViewModels.AddAlbumViewModel

@{
    ViewData["Title"] = "Edit Album";
}

<h2>Edit Album</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <img src="@Model.CoverUrl" alt="Current Cover" style="max-height: 100px;" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="CoverUrl"></label>
        <input asp-for="CoverUrl" type="text" class="form-control"/>
        <span asp-validation-for="CoverUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
