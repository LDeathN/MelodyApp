@model IEnumerable<MelodyApp.Models.ViewModels.AlbumViewModel>

@{
    ViewData["Title"] = "Albums";
}

<h2>Albums</h2>

<a asp-action="Add" class="btn btn-primary mb-3">Add New Album</a>
<form asp-action="Index" method="get" class="mb-3 d-flex">
    <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" class="form-control me-2" placeholder="Search songs..." />
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Cover</th>
            <th>User ID</th>
            <th>Songs Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
            <tr>
                <td>@album.Title</td>
                <td>
                    <img src="@album.CoverImageUrl" alt="@album.Title" style="max-height: 60px;" />
                </td>
                <td>@album.UserId</td>
                <td>@album.SongCount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@album.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@album.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@album.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    int currentPage = (int)ViewData["CurrentPage"];
    int totalPages = (int)ViewData["TotalPages"];
    string currentFilter = ViewData["CurrentFilter"]?.ToString() ?? "";
}

<nav aria-label="Album pagination">
    <ul class="pagination">
        @if (currentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-searchTerm="@currentFilter">Previous</a>
            </li>
        }

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchTerm="@currentFilter">@i</a>
            </li>
        }

        @if (currentPage < totalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-searchTerm="@currentFilter">Next</a>
            </li>
        }
    </ul>
</nav>