@model IEnumerable<MelodyApp.Models.ViewModels.AddAlbumViewModel>
@{
    ViewData["Title"] = "Add Album";
}

<h2>Add Album</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CoverUrl"></label>
        <input asp-for="CoverUrl" type="file" class="form-control" />
        <span asp-validation-for="CoverUrl" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="UserId"></label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
