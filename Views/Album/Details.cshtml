@model MelodyApp.Models.ViewModels.AlbumDetailsViewModel

@{
    ViewData["Title"] = "Album Details";
}

<h2>@Model.Title</h2>
<img src="@Model.CoverImageUrl" class="img-fluid mb-3" style="max-height: 300px;" />

<h4>Songs in this album:</h4>

@if (Model.Songs.Any())
{
    <ul class="list-group">
        @foreach (var song in Model.Songs)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @song.Title
                <span class="badge bg-secondary">@song.GenreName</span>
            </li>
        }
    </ul>
}
else
{
    <p>No songs in this album yet.</p>
}